  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Edge against localhost",
      "type": "edge",
      "request": "launch",
      "url": "${workspaceFolder}/index.html",
      "webRoot": "${workspaceFolder}/index.html"
    },
    {
      "name": "Launch localhost in Microsoft Edge",
      "type": "edge",
      "request": "launch",
      "url": "http://172.21.112.1:8000",
      "webRoot": "${workspaceFolder}/index.html"
    },
    {
      "name": "Launch Microsoft Edge and open the Elements tool",
      "request": "launch",
      "type": "vscode-edge-devtools.debug",
      "url": "http://172.21.112.1:8000",
      "webRoot": "${workspaceFolder}/index.html"
    }
  ]
